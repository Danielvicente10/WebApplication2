@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="text-center p-5 bg-white shadow rounded" style="max-width: 500px; width: 100%;">
        <h1 class="display-5 mb-4">Importe a Nota</h1>
        <div class="mb-3">
            <input type="file" id="arquivoXml" accept=".xml" class="form-control" />
        </div>
        <button id="btnEnviar" class="btn btn-primary w-100">Enviar</button>
    </div>
</div>

@section Scripts {
    <script>
        $("#btnEnviar").click(function () {
            var arquivo = $("#arquivoXml")[0].files[0];

            if (!arquivo) {
                alert("Selecione um arquivo XML antes de enviar.");
                return;
            }

            var formData = new FormData();
            formData.append("arquivoXml", arquivo);

            $.ajax({
                url: '/AppLeituraXml/InserirDadosDoArquivo',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (resultado) {
                    alert("Arquivo enviado com sucesso!");
                    console.log(resultado);
                },
                error: function (erro) {
                    alert("Erro ao enviar arquivo!");
                    console.log(erro);
                }
            });
        });
    </script>
}
